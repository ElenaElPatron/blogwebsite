<html lang="de">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Kontakt</title>
    <link rel="stylesheet" href="styles.css" />
  </head>
  <body>
    <form action="/contact">
      <header>
        <h1>Kontakt</h1>
        <p>Wir freuen uns auf Ihre Nachricht!</p>
      </header>
      <main>
        <section class="contact-info">
          <h2>Unsere Kontaktdaten</h2>
          <p><strong>Adresse:</strong> Deine Straße, 3000 Bern, Schweiz</p>
          <p><strong>Telefon:</strong> +41 123 456 789</p>
          <p><strong>E-Mail:</strong>
            <a href="mailto:info@example.com">info@example.com</a></p>
        </section>
        <section class="contact-form">
          <h2>Kontaktformular</h2>
          <form action="#" method="post">
            <label for="name">Name:</label>
            <input
              type="text"
              id="name"
              name="name"
              placeholder="Ihr Name"
              required
            />

            <label for="email">E-Mail:</label>
            <input
              type="email"
              id="email"
              name="email"
              placeholder="Ihre E-Mail"
              required
            />

            <label for="message">Nachricht:</label>
            <textarea
              id="message"
              name="message"
              placeholder="Ihre Nachricht"
              required
            ></textarea>

            <button type="submit">Absenden</button>
          </form>
        </section>
      </main>
      <footer>
        <p>© 2024 Dein Unternehmen. Alle Rechte vorbehalten.</p>
      </footer>
    </form>
  </body>
</html>